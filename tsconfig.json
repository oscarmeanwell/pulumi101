{
    "compilerOptions": {
      "lib": [
        "es2019",
        "es2020.string",
        "es2020.symbol.wellknown"
      ],
      "module": "commonjs",
      "target": "es2019",
      "moduleResolution": "node",
      "outDir": "./dist",
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["libs"],
    "exclude": ["node_modules/**/*", "infrastructure/**/*", ".vscode/**/*"]
  }
  